<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/material_card"
        app:cardCornerRadius="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_back"

            >

            <ImageView
                android:layout_width="54dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/label_id"
                android:paddingEnd="15dp"
                android:layout_height="38dp"
                android:src="@drawable/label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:text="@string/fake_index"
                android:id="@+id/appeal_index_id"
                android:textSize="12sp"
                android:paddingEnd="15dp"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toTopOf="@id/label_id"
                app:layout_constraintLeft_toLeftOf="@id/label_id"
                app:layout_constraintRight_toRightOf="@id/label_id"
                android:layout_marginTop="8dp"

                />


            <TextView
                android:id="@+id/phone_text_id"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/phone_number_text"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/phone_number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/fake_phone_number"
                android:textColor="@color/text_def"
                android:textSize="16sp"
                app:layout_constraintLeft_toRightOf="@id/phone_text_id"
                app:layout_constraintTop_toTopOf="@id/phone_text_id" />

            <TextView
                android:id="@+id/district_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/district_name_text"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/phone_text_id"
                app:layout_constraintTop_toBottomOf="@id/phone_text_id" />

            <TextView
                android:id="@+id/district_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/fake_district_name"
                android:textColor="@color/text_def"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/phone_number_id"
                app:layout_constraintTop_toBottomOf="@id/phone_number_id" />

            <TextView
                android:id="@+id/request_date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/request_date_text"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/district_text_id"
                app:layout_constraintTop_toBottomOf="@id/district_text_id" />


            <TextView
                android:id="@+id/date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/fake_request_date"
                android:textColor="@color/text_def"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/district_text"
                app:layout_constraintTop_toBottomOf="@id/district_text" />

            <TextView
                android:id="@+id/description_text_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/description_name_text"
                android:textColor="@color/blue"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="@id/request_date_id"
                app:layout_constraintTop_toBottomOf="@id/request_date_id" />

            <TextView
                android:id="@+id/desc_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fake_desc"
                android:textColor="@color/text_def"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="@id/date_id"
                app:layout_constraintTop_toBottomOf="@id/date_id" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="65dp"
                android:layout_height="28dp"
                android:layout_marginTop="10dp"
                android:text="@string/detail"
                android:textColor="@color/white"
                android:background="@drawable/detail_back"
                android:textSize="14sp"
                android:id = "@+id/detail_btn"
                android:fontFamily="@font/poppins_regular"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <Space
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/material_card"
        />


</androidx.constraintlayout.widget.ConstraintLayout>